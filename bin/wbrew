#!/usr/bin/env bash
#
# A wrapper for brew and brew cask.
#

Brew=/usr/local/bin/brew # hard to avoid hardcoding path if we want to call this "brew"
Cask="$Brew cask"
CaskRegex="^ [-] ([a-z]*):.*"

brewCommands () { $Brew commands | egrep -v commands$ | sort; }
caskCommands () { $Cask | perl -ne '/^ [-] ([a-z]+):/ && print "$1\n";' | sort; }
allCommands ()  { { brewCommands && caskCommands; } | sort -u | awk NF | column; }

provides () {
  local cellar="$(brew --cellar)"
  cd "$cellar"
  find * -type f -name "$1" | while read path; do
    printf "%-20s %s\n" "${path%%/*}" "$cellar/$path"
  done
}

list () {
  if [[ $# -eq 0 ]]; then
    # brew cask list takes about 4 seconds to complete, ls -1 .001 seconds.
    { $Brew list | cat && ls -1 /opt/homebrew-cask/Caskroom; } | sort | column
  else
    $Brew list "$@" && $Cask "$@" | sort
  fi
}

install () {
  $Brew options "$@"
  $Brew install "$@" 2>/dev/null || $Cask install "$@" 2>/dev/null
}

case "$1" in
                     "") printf "Usage: $(basename $0) [options] where options include:\n" && allCommands ;;
                  files) shift && [[ $# -gt 0 ]] && $Brew list --verbose "$@" ;;
               provides) shift && [[ $# -gt 0 ]] && provides "$@" ;;
                 relink) shift && $Brew unlink "$@" && $Brew link "$@" ;;
                 search) shift && ( $Brew search ; $Cask search ) | ack "$@" | sort -u ;;
                     up) shift && $Brew update "$@" && $Brew upgrade --all "$@" ;;
                   list) shift && list "$@" ;;
                install) shift && install "$@" ;;
audit|cleanup|dr|doctor) $Brew "$@" ; echo "" ; $Cask "$@" ;;
   fetch|home|info|edit) $Brew "$@" 2>/dev/null || $Cask "$@" 2>/dev/null ;;
      alfred|checklinks) $Cask "$@" ;;
                      *) $Brew "$@" ;;
esac
